# Create or overwrite .gitignore in the root of E-VEZA project
cat > .gitignore << 'EOF'
# Python
__pycache__/
*.pyc
*.pyo
*.pyd
*.egg-info/
.pytest_cache/
.mypy_cache/

# Large data folders - NEVER commit these
data/
active_frames_output/
frames/
videos/
UCF_Crimes_Frames/
videos_frames/
extracted_frames/
output_frames/

# Temporary / logs that grow big or are machine-specific
*.log
*.tmp
*.temp
bad_files_*.log

# Common junk
.DS_Store
Thumbs.db
*.swp
*~
EOF